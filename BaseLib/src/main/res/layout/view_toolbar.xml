<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                >

    <TextView
        android:id="@+id/tv_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dp_44"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:text="返回"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/icon_back"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/tv_bar_back"
        android:layout_toLeftOf="@+id/tv_bar_right"
        android:paddingLeft="@dimen/dp_44"
        android:paddingRight="@dimen/dp_44">

        <TextView
            android:id="@+id/tv_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxEms="7"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/c333333"
            android:textSize="@dimen/sp_18"
            tools:text="标题"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minWidth="@dimen/dp_50"
        android:paddingRight="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        tools:text="副标题"/>
</RelativeLayout>