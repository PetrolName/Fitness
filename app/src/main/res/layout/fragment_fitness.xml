<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cf6f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/cfee13c"-->
            <!--android:gravity="left"-->
            <!--android:paddingBottom="@dimen/dp_8"-->
            <!--android:paddingLeft="@dimen/dp_15"-->
            <!--android:paddingTop="@dimen/dp_8"-->
            <!--android:text="训练"-->
            <!--android:textColor="@color/c333333"-->
            <!--android:textSize="@dimen/sp_14" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="@dimen/dp_8"
                android:text="定制你的健身计划"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:padding="@dimen/dp_8"
                android:text="只属于你的训练计划"
                android:textColor="@color/c999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tvStartMake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/round_cfee13c_bg"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:text="开始定制"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mineTrainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="@dimen/dp_8"
                android:text="我的健身计划"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvSetAlarmClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="设定闹钟"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                android:background="@drawable/round_cfee13c_bg"
                 />

            <TextView
                android:id="@+id/tvAddCourseLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabel"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_7"
                android:padding="@dimen/dp_8"
                android:text="你还没有健身计划哦"
                android:textColor="@color/c999999"
                android:textSize="@dimen/sp_12"
                 />

            <LinearLayout
                android:id="@+id/mineFitnessPlanLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddCourseLabel"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
