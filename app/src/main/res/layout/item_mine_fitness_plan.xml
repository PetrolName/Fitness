<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_default_course" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/c333333"
        android:textSize="@dimen/sp_15"
        tools:text="名字" />

    <TextView
        android:id="@+id/tvHasAppliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/c666666"
        android:textSize="@dimen/sp_11"
        tools:text="无器械" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHasAppliance"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/c666666"
        android:textSize="@dimen/sp_12"
        tools:text="3分钟" />

    <TextView
        android:id="@+id/tvSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHasAppliance"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tvTime"
        android:background="@mipmap/icon_spot" />

    <TextView
        android:id="@+id/tvStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTime"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/tvSpot"
        android:textColor="@color/c666666"
        android:textSize="@dimen/sp_12"
        tools:text="强度低" />

</RelativeLayout>
