<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cf6f5f5">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_mine" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bg"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="-30dp"
        android:src="@mipmap/image_default_avatar" />

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignBottom="@+id/avatarImage"
        android:layout_alignRight="@+id/avatarImage"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@mipmap/icon_user_edit" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="张三"
        android:textColor="@color/c333333"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatarImage"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRunRecord"
            style="@style/MineTextStyle"
            android:text="跑步记录" />

        <TextView
            android:id="@+id/tvMineDynamic"
            style="@style/MineTextStyle"
            android:text="我的动态" />

        <TextView
            android:id="@+id/tvSetting"
            style="@style/MineTextStyle"
            android:text="设置" />
    </LinearLayout>


</RelativeLayout>
